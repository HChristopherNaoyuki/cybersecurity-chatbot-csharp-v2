<Window x:Class="cybersecurity_chatbot_csharp_v2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cybersecurity_chatbot_csharp_v2"
        xmlns:views="clr-namespace:cybersecurity_chatbot_csharp_v2.Views"
        mc:Ignorable="d"
        Title="Cybersecurity Awareness Chatbot" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF0D47A1" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Cybersecurity Awareness Chatbot" 
                           Foreground="White" 
                           FontSize="20" 
                           FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1">
            <TabItem Header="Chat">
                <views:ChatView DataContext="{Binding ChatViewModel}"/>
            </TabItem>
            <TabItem Header="Quiz">
                <views:QuizView DataContext="{Binding QuizViewModel}"/>
            </TabItem>
            <TabItem Header="Tasks">
                <views:TasksView DataContext="{Binding TaskViewModel}"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>