<!-- MainWindow.xaml -->
<Window x:Class="cybersecurity_chatbot_csharp_v2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cybersecurity_chatbot_csharp_v2"
        mc:Ignorable="d"
        Title="Cybersecurity Awareness Chatbot" Height="600" Width="900" WindowStartupLocation="CenterScreen">
    <Grid>
        <TabControl>
            <TabItem Header="Chat">
                <local:ChatView />
            </TabItem>
            <TabItem Header="Quiz">
                <local:QuizView />
            </TabItem>
            <TabItem Header="Tasks">
                <local:TasksView />
            </TabItem>
        </TabControl>
    </Grid>
</Window>